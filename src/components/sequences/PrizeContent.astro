---
import banner from "../../assets/BannerPlusBanner.webp";
import banner2 from "../../assets/bannerPrize1.webp";
import banner3 from "../../assets/LogoPlusLink.webp";
import banner4 from "../../assets/IphonePrize2.webp";
---

<div class="w-full py-20 px-6">
  <div
    class="max-w-screen-xl mx-auto grid grid-cols-1 lg:grid-cols-12 gap-x-12 gap-y-16 items-start"
  >
    <div class="col-span-12 lg:col-span-8">
      <div class="relative text-start justify-start">
        <h2
          class="text-4xl text-start md:text-[93px] font-display font-semibold pb-20 pr-0 md:pr-15 text-slate-900 leading-tight"
        >
          VAŠA ZNAČKA NA PRVOM MIESTE
        </h2>
      </div>
      <div
        class="space-y-10 col-start grid grid-cols-1 lg:grid-cols-2 gap-x-8 gap-y-10"
      >
        <div class="flex flex-col items-start gap-4">
          <div class="flex flex-row gap-3 items-center">
            <div
              class="flex-shrink-0 w-8 h-8 bg-yellow-400 text-slate-900 font-bold font-display flex items-center justify-center rounded-full"
            >
              1
            </div>
            <h3
              class="text-xl md:text-3xl font-display font-bold text-slate-900"
            >
              REKLAMNÝ BANNER
            </h3>
          </div>
          <div class="mt-4 w-full max-w-[353px]">
            <img
              style="border-radius: 2rem;"
              src={banner2.src}
              alt="Reklamný banner Prize"
              class="w-full h-auto"
            />
          </div>
          <div class="gap-2 font-inter font-medium">
            <p class="pb-2 text-xl">
              <blesk></blesk>produkt z vášho portfólia
            </p><p class="text-xl">
              <blesk></blesk>alebo produkt tretej strany
            </p>
          </div>
        </div>
        <div class="grid grid-cols-1 gap-x-8 gap-y-10">
          <div class="flex flex-col items-start gap-4">
            <div class="flex flex-row gap-3 items-center">
              <div
                class="flex-shrink-0 w-8 h-8 bg-[#C0A9FF] text-slate-900 font-bold font-display flex items-center justify-center rounded-full"
              >
                2
              </div>
              <h3
                class="text-xl md:text-3xl font-display font-bold text-slate-900"
              >
                LOGO NA OČIACH
              </h3>
            </div>
            <div class="w-full max-w-[353px]">
              <img
                src={banner3.src}
                alt="Logo Banner"
                class="w-full pt-3 h-auto"
              />
            </div>
          </div>
          <div class="flex flex-col items-start gap-4">
            <div class="flex flex-row gap-3 items-center">
              <div
                class="flex-shrink-0 w-8 h-8 bg-[#592FCB] text-white font-display font-bold flex items-center justify-center rounded-full"
              >
                3
              </div>
              <h3
                class="text-xl md:text-3xl font-display font-bold text-slate-900"
              >
                REKLAMNÝ BANNER
              </h3>
            </div>
            <div class="w-full max-w-[353px]">
              <img
                src={banner.src}
                alt="Brand Name Banner"
                class="w-full pt-3 h-auto"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="hidden lg:flex justify-center col-span-4 items-center">
      <div class="w-full max-w-sm">
        <img src={banner4.src} alt="Iphone Prize" class="w-full h-auto" />
      </div>
    </div>
  </div>
</div>
