<style>
  .ecosystem-text .word {
    display: inline-flex;
    /* Toto zabezpečí, že sa slovo nikdy nerozdelí, ale môže sa zalomiť medzera za ním */
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import SplitType from "split-type";

  gsap.registerPlugin(ScrollTrigger);

  // ZMENA #2: Upravíme 'types', aby sme rozdelili text aj na slová, nielen na písmená
  const myText = new SplitType(".eventy-text", { types: "words, chars" });

  // Zvyšok skriptu zostáva rovnaký
  gsap.from(myText.chars, {
    opacity: 0.1,
    stagger: 0.05,
    scrollTrigger: {
      trigger: ".eventy-text",
      start: "top 80%",
      end: "bottom 45%",
      scrub: 4,
    },
  });
</script>
