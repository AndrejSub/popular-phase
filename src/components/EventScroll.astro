---
import dvojka from "../assets/02.svg"; // Import obrázok pre Event sekciu
---

<section class="scroll-sequence-container2 min-h-screen relative">
  <div
    class="event-panel absolute pb-0 pl-5 md:pb-45 md:pl-15 bottom-0 left-0 w-full h-0 bg-[#C0A9FF] flex flex-col items-start justify-end overflow-hidden"
  >
    <div
      class="absolute size-20 bottom-35 left-35 md:bottom-76 md:left-150 md:size-64 rounded-full flex items-center justify-center"
    >
      <img src={dvojka.src} alt="" />
    </div>
    <h1
      class="text-[#120B2C] text-5xl md:text-9xl lg:text-[200px] font-display font-bold uppercase"
    >
      Event
    </h1>
    <p class="text-[#120B2C] text-3xl font-inter font-medium mt-4">
      Zvýraznite vašu značku cielenou kampaňou.
    </p>
  </div>
</section>

<style>
  /* Tento blok môže zostať prázdny alebo ho môžete úplne vymazať. */
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  // ZMENA: SplitType už nie je potrebný, lebo neanimujeme žiadny text po písmenách.
  // import SplitType from "split-type";

  gsap.registerPlugin(ScrollTrigger);

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: ".scroll-sequence-container2",
      pin: true,
      scrub: 1,
      // ZMENA: Skrátil som dĺžku skrolovania, keďže už nemáme úvodnú animáciu textu.
      // Vďaka tomu bude animácia panela svižnejšia.
      end: "+=2000",
    },
  });

  // --- ZJEDNODUŠENÁ ANIMÁCIA IBA PRE PANEL ---
  // Všetky animácie pre `.animated-text` boli odstránené.

  // 1. Zobrazenie "Event" panela
  // ZMENA: Selektor bol zmenený z .homepage-panel na .event-panel
  tl.to(".event-panel", {
    height: "100vh",
    duration: 2,
    ease: "power2.inOut",
  });

  // 2. Pauza
  tl.to({}, { duration: 1 });

  // 3. Skrytie "Event" panela
  tl.to(".event-panel", {
    opacity: 0,
    duration: 1.5,
    ease: "power2.inOut",
  });
</script>
