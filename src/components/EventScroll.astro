<section class="scroll-sequence-container2 bg-[#423566] min-h-screen relative">
  <div
    class="event-panel absolute bottom-0 left-0 w-full h-0 bg-[#C0A9FF] flex flex-col items-center justify-center overflow-hidden"
  >
    <div
      class="absolute top-8 right-8 w-16 h-16 bg-yellow-400 rounded-full flex items-center justify-center"
    >
      <span class="text-slate-900 font-bold text-2xl">02</span>
    </div>
    <h1
      class="text-[#120B2C] text-5xl md:text-8xl lg:text-9xl font-extrabold uppercase"
    >
      Event
    </h1>
    <p class="text-[#120B2C]/80 text-xl mt-4">
      Zvýraznite vašu značku cielenou kampaňou.
    </p>
  </div>
</section>

<style>
  /* Tento blok môže zostať prázdny alebo ho môžete úplne vymazať. */
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  // ZMENA: SplitType už nie je potrebný, lebo neanimujeme žiadny text po písmenách.
  // import SplitType from "split-type";

  gsap.registerPlugin(ScrollTrigger);

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: ".scroll-sequence-container2",
      pin: true,
      scrub: 1,
      // ZMENA: Skrátil som dĺžku skrolovania, keďže už nemáme úvodnú animáciu textu.
      // Vďaka tomu bude animácia panela svižnejšia.
      end: "+=2000",
    },
  });

  // --- ZJEDNODUŠENÁ ANIMÁCIA IBA PRE PANEL ---
  // Všetky animácie pre `.animated-text` boli odstránené.

  // 1. Zobrazenie "Event" panela
  // ZMENA: Selektor bol zmenený z .homepage-panel na .event-panel
  tl.to(".event-panel", {
    height: "100vh",
    duration: 2,
    ease: "power2.inOut",
  });

  // 2. Pauza
  tl.to({}, { duration: 1 });

  // 3. Skrytie "Event" panela
  tl.to(".event-panel", {
    opacity: 0,
    duration: 1.5,
    ease: "power2.inOut",
  });
</script>
