---
import banner from "../assets/BannerAdvertising.webp";
import banner2 from "../assets/bannerEvent1.webp";
import banner3 from "../assets/iphoneEvent1.webp";
import banner4 from "../assets/banner4.svg";
---

<section class="w-full py-60 px-6">
  <div
    class="max-w-screen-xl mx-auto grid grid-cols-12 gap-x-6 gap-y-16 items-start"
  >
    <div class="pb-40 col-span-8 pr-1">
      <div class="relative text-start justify-start">
        <h2
          class="text-4xl pb-10 text-start md:text-start md:text-[95px] font-display font-semibold text-slate-900 leading-tight"
        >
          BRAND V CENTRE ZÁBAVY
        </h2>
      </div>

      <div
        class="space-y-10 col-start grid grid-cols-1 md:grid-cols-12 gap-x-8 gap-y-10"
      >
        <div class="flex flex-col md:col-span-6 items-start gap-4">
          <div class="flex flex-row gap-3">
            <div
              class="flex-shrink-0 w-8 h-8 bg-yellow-400 text-slate-900 font-display font-bold flex items-center justify-center rounded-full"
            >
              1
            </div>
            <h3
              class="text-xl md:text-3xl font-display font-bold text-slate-900"
            >
              REKLAMNÝ BANNER
            </h3>
          </div>
          <div>
            <div class="mt-4 w-58 md:w-full md:max-w-[353px]">
              <img
                style="border-radius: 2rem;"
                src={banner.src}
                alt="Hero Banner"
                class="w-full h-auto"
              />
            </div>
          </div>
          <div class="font-inter font-medium">
            <p class="pb-2 text-xl">
              <blesk></blesk>fixná/rotujúca podoba
            </p>

            <p class="pb-2 text-xl"><blesk></blesk>custom URL prelink</p>
          </div>
        </div>

        <div
          class="grid grid-cols-1 md:grid-cols-1 md:col-span-6 gap-x-8 gap-y-10"
        >
          <div class="flex flex-col items-start gap-4">
            <div class="flex flex-row gap-3">
              <div
                class="flex-shrink-0 w-8 h-8 bg-[#C0A9FF] text-slate-900 font-bold font-display flex items-center justify-center rounded-full"
              >
                2
              </div>

              <h3
                class="text-xl md:text-3xl font-display font-bold text-slate-900"
              >
                ZOZNAM PRODUKTOV
              </h3>
            </div>
            <div>
              <div class="mt-4 w-58 md:w-full md:max-w-[353px]">
                <img
                  src={banner2.src}
                  alt="Logo Banner "
                  class="w-full h-auto"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-span-4">
      <div class="hidden lg:flex justify-center items-center md:col-row-2">
        <div class="w-full max-w-sm">
          <img src={banner3.src} alt="Iphone banner w-full h-auto" />
        </div>
      </div>
    </div>
  </div>
</section>
