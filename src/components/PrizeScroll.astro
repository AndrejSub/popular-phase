---
import trojka from "../assets/03.svg";
---

<section
  class="scroll-sequence-container3 min-h-screen bg-[radial-gradient(ellipse_at_top,_#FEFEFF,_#D8CDF8)] relative"
>
  <div
    class="prize-panel pb-10 pl-5 md:pb-45 md:pl-15 absolute bottom-0 left-0 w-full h-0 flex flex-col items-start justify-end overflow-hidden"
  >
    <div
      class="absolute size-20 bottom-24 md:bottom-76 md:left-45 md:size-64 rounded-full flex items-center justify-center"
    >
      <img src={trojka.src} alt="" />
    </div>
    <h1
      class="text-[#120B2C] font-display text-5xl md:text-9xl lg:text-[200px] font-bold uppercase"
    >
      PRIZE
    </h1>
    <p class="text-[#120B2C] text-3xl font-inter font-medium mt-4">
      Motívacia, ktorá poháňa event.
    </p>
  </div>
</section>

<style>
  /* Tento blok môže zostať prázdny alebo ho môžete úplne vymazať. */
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  // ZMENA: SplitType už nie je potrebný, lebo neanimujeme žiadny text po písmenách.
  // import SplitType from "split-type";

  gsap.registerPlugin(ScrollTrigger);

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: ".scroll-sequence-container3",
      pin: true,
      scrub: 1,
      // ZMENA: Skrátil som dĺžku skrolovania, keďže už nemáme úvodnú animáciu textu.
      // Vďaka tomu bude animácia panela svižnejšia.
      end: "+=2000",
    },
  });

  // --- ZJEDNODUŠENÁ ANIMÁCIA IBA PRE PANEL ---
  // Všetky animácie pre `.animated-text` boli odstránené.

  // 1. Zobrazenie "Event" panela
  // ZMENA: Selektor bol zmenený z .homepage-panel na .prize-panel
  tl.to(".prize-panel", {
    height: "100vh",
    duration: 2,
    ease: "power2.inOut",
  });

  // 2. Pauza
  tl.to({}, { duration: 1 });

  // 3. Skrytie "Event" panela
  tl.to(".prize-panel", {
    opacity: 0,
    duration: 1.5,
    ease: "power2.inOut",
  });
</script>
