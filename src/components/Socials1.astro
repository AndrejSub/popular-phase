---
import soc1 from "../assets/soc1.webp";
import soc2 from "../assets/soc2.webp";
import soc3 from "../assets/soc3.webp";
import soc4 from "../assets/soc4.webp";
import soc5 from "../assets/soc5.webp";
---

<section class="w-full pt-20 pb-20 md:pb-32 px-6">
  <div
    class="max-w-screen-xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-x-12 gap-y-16 items-start"
  >
    <div class="relative text-start justify-start md:col-span-2">
      <h2
        class="text-4xl text-center md:text-start md:text-8xl font-montserrat pr-0 md:pr-15 text-slate-900 leading-tight"
      >
        Zviditeľnite sa v našej komunite
      </h2>
    </div>

    <div
      class="md:col-span-2 grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-x-8 gap-y-12 items-center"
    >
      <div class="flex justify-center">
        <img src={soc1.src} alt="Logo partnera 1" class="w-full h-auto" />
      </div>
      <div class="flex justify-center">
        <img src={soc2.src} alt="Logo partnera 2" class="w-full h-auto" />
      </div>
      <div class="flex justify-center">
        <img src={soc3.src} alt="Logo partnera 3" class="w-full h-auto" />
      </div>
      <div class="flex justify-center">
        <img src={soc4.src} alt="Logo partnera 4" class="w-full h-auto" />
      </div>
      <div class="flex justify-center">
        <img src={soc5.src} alt="Logo partnera 5" class="w-full h-auto" />
      </div>
    </div>
  </div>
</section>
