---
// Komponent pre pätičku stránky (Footer)
import logo from "../assets/LogoQuestim2.png";
// Dáta pre odkazy pre ľahšiu úpravu
const footerLinks = [
  { name: "Terms & Conditions", href: "#" },
  { name: "GDPR & Privacy Policy", href: "#" },
  { name: "Media kit", href: "#" },
  { name: "Užívatelia", href: "#" },
];
---

<footer class="bg-[#120B2C] text-gray-300">
  <div class="mx-auto max-w-7xl px-6 py-16 sm:px-8 lg:px-10">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-3 lg:gap-8">
      <div class="flex items-start">
        <a href="/" aria-label="Questim domovská stránka">
          <img src={logo.src} alt="Questim logo" class="h-10 w-auto" />
        </a>
      </div>

      <div class="flex flex-col space-y-4">
        {
          footerLinks.map((link) => (
            <a
              href={link.href}
              class="hover:text-white transition-colors duration-300"
            >
              {link.name}
            </a>
          ))
        }
      </div>

      <div class="flex flex-col space-y-4">
        <p>Lootopia s.r.o.</p>
        <a
          href="mailto:advertising@questim.com"
          class="hover:text-white transition-colors duration-300"
        >
          advertising@questim.com
        </a>
        <a
          href="tel:+421903418315"
          class="hover:text-white transition-colors duration-300"
        >
          +421903418315
        </a>
      </div>
    </div>
  </div>
</footer>
