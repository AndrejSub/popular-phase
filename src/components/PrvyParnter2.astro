---
// Komponent pre sekciu s cenovým balíkom

// Dáta pre zoznam výhod - ľahko ich môžete meniť alebo dopĺňať
const features = [
  "ESTE TO NENI DOKONCENE",
  "Event pod vašou značkou",
  "Tournament banner",
  "Prize page advertising",
  "Social media promotion",
  "E-mail marketing",
];

// Importujeme obrázky z `src`.
// Uistite sa, že máte tieto obrázky v `src/assets/`
import priceTagPng from "../assets/teraz0.png"; // Nahraďte cestou k vášmu PNG
import lightningSvg from "../assets/blesk.svg"; // Nahraďte cestou k SVG alebo PNG blesku
---

<section
  class="relative bg-gradient-to-br from-[#592FCB] to-[#C0A9FF] text-white py-20 sm:py-24 overflow-hidden"
>
  <img
    src={lightningSvg.src}
    alt=""
    class="absolute top-1/4 right-0 w-24 h-auto transform -translate-x-1/4 opacity-50 -rotate-12"
  />
  <img
    src={lightningSvg.src}
    alt=""
    class="absolute bottom-1/4 left-0 w-20 h-auto transform translate-x-1/4 opacity-40 rotate-12"
  />

  <div class="relative container mx-auto px-4 flex flex-col items-center z-10">
    <p class="font-semibold text-sm uppercase tracking-widest mb-4">
      Komplet balík
    </p>

    <div class="relative my-4 w-full max-w-2xl">
      <img src={priceTagPng.src} alt="Teraz len 0 Euro" class="w-full h-auto" />

      <div
        class="absolute -top-4 -right-4 sm:top-2 sm:right-0 md:right-[-2rem] bg-[#592FCB] p-3 rounded-lg shadow-xl transform rotate-6 max-w-[200px] text-center"
      >
        <p class="text-xs sm:text-sm font-semibold leading-tight">
          Platí na obmedzený čas a pri dodaní eventových odmien.
        </p>
      </div>
    </div>

    <ul class="mt-12 space-y-4 max-w-md text-lg">
      {
        features.map((feature) => (
          <li class="flex items-center gap-x-3">
            <svg
              class="w-6 h-6 flex-shrink-0"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M16.6923 8.5L10.6923 14.5L7.86381 11.6715"
                stroke="white"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
            <span>{feature}</span>
          </li>
        ))
      }
    </ul>

    <a
      href="#"
      class="mt-12 inline-block bg-white text-[#592FCB] font-bold py-4 px-12 rounded-lg uppercase tracking-wider text-sm hover:bg-gray-200 transition-colors duration-300 shadow-lg"
    >
      Book a call
    </a>
  </div>
</section>
